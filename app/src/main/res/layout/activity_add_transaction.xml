<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange"
    android:padding="15dp"
    tools:context="com.taracamp.financeplanner.AddTransactionActivity">

    <LinearLayout
        android:id="@+id/addTransactionLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/addTransactionTabsLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addTransactionPositiveTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="Einnahmen"
                android:textColor="@color/textTabBright"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/addTransactionNegativeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="Ausgaben"
                android:textColor="@color/textTabLight"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/addTransactionNeutralTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="Transfer"
                android:textColor="@color/textTabLight"
                android:textSize="14sp"/>

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/addTransactionViewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    </LinearLayout>

</RelativeLayout>